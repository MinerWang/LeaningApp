<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_main_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户查询"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <Button
        android:id="@+id/bt_main_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="退出登录"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/lilinearLayout" />
    <Button
        android:id="@+id/bt_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:text="音频播放"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/lilinearLayout" />
    <Button
        android:id="@+id/bt_vidio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:text="视频"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/lilinearLayout" />
    <Button
        android:id="@+id/libt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="查询"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/lilinearLayout" />
    <Button
        android:id="@+id/camerabt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="相机"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/lilinearLayout" />
    <LinearLayout
        android:id="@+id/lilinearLayout"
        android:layout_width="343dp"
        android:layout_height="252dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_hello"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/lieditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView

            android:id="@+id/tte"
            android:layout_width="330dp"
            android:layout_height="42dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>